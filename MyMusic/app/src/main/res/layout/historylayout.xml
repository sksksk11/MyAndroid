<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="5dp"
    >
    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/bm_default"
        android:padding="5dp"
        android:layout_marginTop="3dp"

        />

    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginRight="7dp"
        >
        <TextView
            android:id="@+id/tv_webTitle"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:hint="网页标题网页标题"
            android:textSize="16dp"
            android:gravity="top"
            android:background="@null"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/colorPrimary"
            />
        <TextView
            android:id="@+id/tv_webUrl"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:hint="http://www.163.com"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:background="@null"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#5C5C5C"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_50"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/iv_toTop"
                android:layout_width="35dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/totop"

                android:scaleType="centerInside"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/iv_toBottom"
                android:layout_width="35dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/tobottom"

                android:scaleType="centerInside"
                android:visibility="gone"
                />

        </LinearLayout>
        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:src="@drawable/garbage_can"
            android:background="@color/red_200"
            android:scaleType="center"
            android:visibility="gone"

            />
        <ImageView
            android:id="@+id/iv_config"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:src="@drawable/configured"
            android:background="@color/blue_200"
            android:scaleType="center"
            android:visibility="gone"
            />

    </LinearLayout>


</LinearLayout>