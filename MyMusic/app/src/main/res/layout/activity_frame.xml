    <LinearLayout
        android:id="@+id/ll_mainButtonBar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="3dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:gravity="center_vertical"
        android:background="@drawable/rounded_background"
        >
        <LinearLayout
            android:id="@+id/ll_collectContainer"
            android:layout_width="0dp"
            android:layout_height="@dimen/LinearLayout_height"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="@dimen/img_width"
                android:layout_height="@dimen/img_height"
                android:layout_marginTop="@dimen/img_marginTop"
                android:src="@drawable/white_star"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_marginTop"
                android:text="收藏"
                android:textColor="@color/white"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_getPicContainer"
            android:layout_width="0dp"
            android:layout_height="@dimen/LinearLayout_height"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            >

            <ImageView
                android:id="@+id/iv_getPic"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/img_height"
                android:layout_marginTop="@dimen/img_marginTop"
                android:src="@drawable/white_picture" />
            <TextView
                android:id="@+id/tv_getPic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_marginTop"
                android:text="图片"
                android:textColor="@color/white"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_bookmarkContainer"
            android:layout_width="0dp"
            android:layout_height="@dimen/LinearLayout_height"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            >

            <ImageView
                android:layout_width="@dimen/img_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/img_marginTop"
                android:src="@drawable/white_bookmark" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_marginTop"
                android:text="书签"
                android:textColor="@color/white"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_historyContainer"
            android:layout_width="0dp"
            android:layout_height="@dimen/LinearLayout_height"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="@dimen/img_width"
                android:layout_height="@dimen/img_height"
                android:layout_marginTop="@dimen/img_marginTop"
                android:src="@drawable/white_history"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_marginTop"
                android:text="历史"
                android:textColor="@color/white"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_keywordContainer"
            android:layout_width="0dp"
            android:layout_height="@dimen/LinearLayout_height"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1"

            >
            <ImageView
                android:layout_width="@dimen/img_width"
                android:layout_height="@dimen/img_height"
                android:layout_marginTop="@dimen/img_marginTop"
                android:src="@drawable/word"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_marginTop"
                android:text="关键词"
                android:textColor="@color/white"
                />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>