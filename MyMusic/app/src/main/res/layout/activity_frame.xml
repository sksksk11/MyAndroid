<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FrameActivity"
    android:orientation="vertical"
    >

    <WebView
        android:id="@+id/wv_mainWebpage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btn_hiddenMainbar"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="隐藏"
        android:visibility="gone"
        />
    <Button
        android:id="@+id/btn_displayMainbar"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="隐藏"
        android:visibility="gone"
        />

    <LinearLayout
        android:id="@+id/ll_webUrlContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/et_url"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="66dp"
            android:layout_marginLeft="@dimen/lpadding"
            android:layout_marginRight="2dp"
            android:layout_marginTop="@dimen/lpadding"
            android:hint="请输入网址"
            android:gravity="center_vertical"
            />
        <Button
            android:id="@+id/btn_clear"
            android:layout_width="49dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="X"
            android:maxLines="1"
            android:textSize="16dp"
            android:layout_marginRight="2dp"
            android:onClick="openWebUrl"
            />

        <Button
            android:id="@+id/btn_go"
            android:layout_width="49dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="GO"
            android:maxLines="1"
            android:textSize="16dp"
            android:layout_marginRight="@dimen/lpadding"
            android:onClick="openWebUrl"
            />

    </LinearLayout>


