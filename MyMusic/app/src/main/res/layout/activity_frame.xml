<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FrameActivity"
    android:orientation="vertical"
    >
    <WebView
        android:id="@+id/wv_mainWebpage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <EditText
        android:id="@+id/et_url"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginLeft="@dimen/lpadding"
        android:layout_marginRight="@dimen/lpadding"
        android:layout_marginTop="@dimen/lpadding"
        android:hint="请输入网址"
        android:gravity="center_vertical"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <Button
            android:id="@+id/btn_collect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="收藏"
            android:layout_marginLeft="@dimen/lpadding"
            android:onClick="addWeburl"
            />
        <Button
            android:id="@+id/btn_bookmark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="书签"
            android:layout_marginLeft="6dp"
            android:onClick="browseSavedBookmark"
            />
        <Button
            android:id="@+id/btn_clear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="清空"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="@dimen/lpadding"
            android:onClick="clearWebUrl" />

        <Button
            android:id="@+id/btn_go"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="GO"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="@dimen/lpadding"
            android:onClick="openWebUrl"
            />

    </LinearLayout>

</LinearLayout>