<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/bgorange"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@mipmap/title_bg"
        android:layout_gravity="center"
        android:background="@color/bgorange"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="登  录"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#666"
        />
    <TextView
        android:id="@+id/tv_inputTip"
        android:layout_width="300dp"
        android:layout_height="26dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="输入用户名时，出现提示" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:src="@mipmap/img_mail"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            />
        <EditText
            android:id="@+id/et_username"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:hint="用户名"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:src="@mipmap/img_lock"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            />
        <EditText
            android:id="@+id/et_password"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:hint="密码"
            android:inputType="textPassword"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:text="没有注册？"
        android:textColor="@color/bgorange"
        android:textStyle="bold"
        android:textSize="13sp"
        />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@color/bgorange"
        android:gravity="center"
        android:text="登  录"
        />

    <Button
        android:id="@+id/btn_test"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@color/bgorange"
        android:gravity="center"
        android:text="跳转到新页面"
        />

    <Button
        android:id="@+id/btn_webview"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@color/bgorange"
        android:gravity="center"
        android:text="跳转到网页页面"
        />



</LinearLayout>